<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.3ayzEh" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dodger_blue</item>
        <item name="colorPrimaryVariant">@color/picton_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/dodger_blue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/mercury</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/darker_white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Background color-->
        <item name="backgroundColor">@color/darker_white</item>
        <!-- font -->
        <item name="android:fontFamily">@font/roboto_regular</item>

        <item name="chipStyle">@style/ChoiceChip</item>
    </style>
    <style name="SearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:searchIcon">@drawable/ic_search_black</item>
        <item name="android:background">@drawable/search_view_background_light</item>
        <item name="android:queryBackground">@android:color/transparent</item>
        <item name="android:iconifiedByDefault">false</item>
    </style>
    <style name="BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="android:elevation">4dp</item>
        <item name="android:background">@drawable/bottom_nav_background</item>
        <item name="menu">@menu/bottom_navigation_menu</item>
        <item name="itemIconTint">@color/bnv_tab_item_foreground</item>
        <item name="labelVisibilityMode">unlabeled</item>
    </style>
    <style name="AccountButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_marginEnd">@dimen/account_button_margin_end</item>
        <item name="android:background">@drawable/ic_account_circle</item>
        <item name="backgroundTint">@null</item>
    </style>
    <style name="SearchBar" parent="Widget.Design.AppBarLayout">
        <item name="android:background">@drawable/search_view_background_light</item>
    </style>
    <style name="ChoiceChip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textColor">@color/choice_chip_text_color</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAlignment">center</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="chipBackgroundColor">@color/choice_chip_background_color</item>
    </style>

    <!-- price range slider in filters -->
    <style name="Widget.App.Slider" parent="Widget.MaterialComponents.Slider">
        <item name="labelStyle">@style/Widget.App.Tooltip</item>
    </style>

    <style name="Widget.App.Tooltip" parent="Widget.MaterialComponents.Tooltip">
        <item name="android:textAppearance">@style/TextAppearance.App.Tooltip</item>
        <item name="backgroundTint">?backgroundColor</item>
    </style>

    <style name="TextAppearance.App.Tooltip" parent="TextAppearance.MaterialComponents.Tooltip">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="FilterDialog" parent="Theme.Design.BottomSheetDialog">
            <item name="bottomSheetStyle">@style/FilterDialog.Style</item>
    </style>
    <style name="FilterDialog.Style" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="ShopDialog" parent="android:Theme.Material.Dialog.Alert">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:layout_marginBottom">24dp</item>
    </style>
</resources>